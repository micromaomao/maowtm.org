    ul
        mixin project(name, builtWith, url, _tags)
            -var tags = _tags || [];
            -var xtoclass = (x => "b-" + x.toLowerCase().replace(/\+/g, 'p').replace(/[^A-Za-z0-9]/g, ''))
            -var className = builtWith.map(xtoclass).join(' ')
            li(class=className)
                h3
                    each tag in tags
                        span.stattag= tag
                        |  
                    a(href=url)= name
                p
                    block
                .builtwith
                    | Built with:
                    each val, index in builtWith
                        |  
                        span(class="built " + xtoclass(val))= val
