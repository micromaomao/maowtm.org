              span.finish(title="Finished every page") ‚úåÔ∏è
            -if (state === "recommend")
              span.recommand(title="Recommended!") üòä
            -if (state === "funny")
              span.recommand(title="Oh this is interesting") üòÄ
            -if (state === "0")
              span.progress(title="Progress: ~0%") üò∂üò∂üò∂
            -if (state === "1/3")
              span.progress(title="Progress: ~30%") üëåüò∂üò∂
            -if (state === "1/2")
              span.progress(title="Progress: ~50%") üëåüëåüò∂üò∂
            -if (state === "2/3")
              span.progress(title="Progress: ~65%") üëåüëåüò∂
            -if (state === "3/3")
              span.progress(title="Progress: ~99%") üëåüëåüëåüëåüò∂
