        span.mline
        | Mao Wtm
        span.mline
    .index-info
        -if (!cord)
            a(href="mailto:micromaomao@gmail.com",target="_blank") micromaomao@gmail.com
            .dot
            a(href="https://github.com/micromaomao") Github
            .dot
            a(href="auth") Public Identity
