extend layout

block head
  title Oops...

block content
  img.logo(src=mapStatic("/svg/logo.svg"))
  h1
    | #{err.status || 500}&hellip; 
    span.desc #{err.statusText || "It's broken!"}

  -if (err.status === 404)
    p
      | We don't know what to do with the requested path 
      code.path #{req.path}
  -else if (err.status && err.status !== 500)
    p= err.message
  -else
    p
      | Our server ran into a problem. Try reloading or 
      a(href="https://github.com/micromaomao/maowtm.org/issues") submit GitHub issue
      | .
      br
      | Problem: 
      code.errmsg= err.message
    -if (stack)
      pre.stack
        -let lines = stack.split('\n')
        each line in lines
          .line= line

  script(src=mapStatic('/script/error.js'))
